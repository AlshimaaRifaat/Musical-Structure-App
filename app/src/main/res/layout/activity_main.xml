<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingTop="140dp">

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainpage"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Activity That contains Buttons to All other Activities"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="10dp"/>
    <Button
        android:id="@+id/play_in_mainpage"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="Now is playing"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="normal|italic" />

    <Button
        android:id="@+id/albums_in_mainpage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="Albums"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="normal|italic" />

    <Button
        android:id="@+id/payment_in_mainpage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:text="Payment"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="normal|italic" />
</LinearLayout>